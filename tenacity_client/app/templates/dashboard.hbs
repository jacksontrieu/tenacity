<div class="standard-container">
  <h2 class="container-title">Dashboard</h2>

  <p>Hello <strong class="text-primary">{{this.model.name}}</strong>!</p>

  <p>As a <strong class="text-primary">{{this.model.role}}</strong>, you have permissions to:</p>

  <ul>
    {{#each this.model.abilities as |ability|}}
      <li>
        <a href="{{ability.url}}">{{ability.displayText}}</a>
      </li>
    {{/each}}
  </ul>
</div>
